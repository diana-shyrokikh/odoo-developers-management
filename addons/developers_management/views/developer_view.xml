<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_developers_management_developer_search"
             model="ir.ui.view"
    >
        <field name="name">developers_management.developer.search</field>
        <field name="model">developers_management.developer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"
                       string="Developer Name"
                />
                <field name="type"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="position"/>
                <field name="company_id"/>

                <filter name="filter_man"
                        string="Male"
                        domain="[
                            ('gender', '=', 'male')
                        ]"
                />
                <filter name="filter_female"
                        string="Female"
                        domain="[
                            ('gender', '=', 'female')
                        ]"
                />
                <separator/>
                <filter name="filter_archived"
                        string="Archived"
                        domain="[
                            ('active', '=', False)
                        ]"
                />

                <group expand="0" string="Group By">
                    <filter string="Type"
                            name="group_by_type"
                            context="{
                                'group_by': 'type'
                            }"
                    />
                    <filter string="Company"
                            name="group_by_company"
                            context="{
                                'group_by': 'company_id'
                            }"
                    />
                </group>

                <searchpanel>
                    <field name="type"
                           string="Type"
                           enable_counters="1"
                           icon="fa-users"
                           select="multi"
                    />
                    <field name="company_id"
                           string="Company"
                           enable_counters="1"
                           icon="fa-black-tie "
                    />
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_developers_management_developer_tree"
            model="ir.ui.view"
    >
        <field name="name">developers_management.developer.tree</field>
        <field name="model">developers_management.developer</field>
        <field name="arch" type="xml">
            <tree create="false" editable="top">
                <field name="name" string="Developer Name"/>
                <field name="type"/>
                <field name="global_identification"/>
                <field name="position"/>
                <field name="company_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="date_of_birth"/>
                <field name="address"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_developers_management_developer_form"
            model="ir.ui.view"
    >
        <field name="name">developers_management.developer.form</field>
        <field name="model">developers_management.developer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="global_identification" invisible="1"/>
                            <field name="position"/>
                            <field name="company_id"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="phone"
                                   attrs="{
                                       'invisible': [('type', '=', 'out-stuff')]
                                   }"
                            />
                            <field name="email"/>
                            <field name="address"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_user"
                    />
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_developers_management_developer_tree"
            model="ir.actions.act_window"
    >
        <field name="name">View Developers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">developers_management.developer</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first developer!
            </p>
        </field>
    </record>

    <record id="action_developers_management_developer_form"
            model="ir.actions.act_window"
    >
        <field name="name">Add Developers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">developers_management.developer</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>

    </record>

    <record model="res.groups" id="group_developer_users">
        <field name="name">Developer Users</field>
    </record>

    <record id="access_developer_user" model="ir.model.access">
        <field name="name">Developer User Access</field>
        <field name="model_id" ref="model_developers_management_developer"/>
        <field name="group_id" ref="group_developer_users"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>


    <menuitem id="menu_developer_view"
              name="View Developers"
              action="action_developers_management_developer_tree"
              groups="group_developer_users"
              parent="menu_developer_master"
              sequence="1"
    />

    <menuitem id="menu_developer_add"
              name="Add Developers"
              action="action_developers_management_developer_form"
              groups="group_developer_users"
              parent="menu_developer_master"
              sequence="2"
    />

</odoo>
